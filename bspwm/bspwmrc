#! /bin/sh

sxhkd &

xsetroot -cursor_name left_ptr

export PATH=/usr/bin:$PATH


bspc monitor -d I II III IV V VI VII VIII IX X
#bspc monitor LVDS-1 -d shell firefox emacs evince etc

bspc config border_width          0
bspc config window_gap            0

bspc config split_ratio           0.5
bspc config borderless_monocle    true
bspc config gapless_monocle       true
bspc config focus_follows_pointer true
bspc config click-to-focus        true


#bspc rule -a Gimp desktop='^8' state=floating follow=on
#bspc rule -a xfce4-terminal desktop=^2
#bspc rule -a firefox desktop='^3'
# remove all rules first
bspc rule -r *:*
#bspc rule -a Emacs desktop=^3 focus=on follow=on
#bspc rule -a URxvt desktop=^1 focus=off follow=off
#bspc rule -a Evince desktop=^2 focus=on follow=on
#bspc rule -a evince desktop=evince
#bspc rule -a mplayer2 state=floating
#bspc rule -a Kupfer.py focus=on
#bspc rule -a Screenkey manage=off


feh --bg-fill /usr/share/xfce4/backdrops/Mountainous_View_by_Sven_Scheuermeier.jpg &
polybar top &
# xfce4-panel --disable-wm-check &
#alttab -d 1 &
plank &

bspc rule -a URxvt -o desktop=^1 focus=on follow=on
bspc rule -a Firefox -o desktop=^2 focus=on
bspc rule -a Emacs -o desktop=^3 focus=on state=tiled
bspc rule -a Evince -o desktop=^4 focus=off follow=off
#evince &
firefox &
emacs &
urxvt &

bspc desktop -f ^1

#$HOME/.config/bspwm/autostart


# https://wiki.archlinux.org/index.php/Cursor_themes#Change_X_shaped_default_cursor
#xsetroot -cursor_name left_ptr

# launch stuff

# https://www.reddit.com/r/bspwm/comments/2mpui3/attempting_to_autostart_a_few_programs/
# launch programs

#sh -c 'echo "launching from bspwmrc"; $HOME/.config/bspwm/launch.sh'

compton -b --config /home/liam/.config/compton.conf
